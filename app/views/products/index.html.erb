<p id="notice"><%= notice %></p>

<h1>Products</h1>

<table>

    <% @products.each do |product| %>
      <tr class= "<%=cycle('list_line_odd','list_line_even')%>">

        <td><%= image_tag(product.image, class: 'list_image') %></td>
      <dl>
        <td class="list_description"><%= product.name %><br>
        <dd><%= product.descripton %><br>
       <%= product.price %></td>
      </dl>  
        
        <td class="list_action" ><%= link_to 'Show', product %><br>
        <%= link_to 'Edit', edit_product_path(product) %><br>
        <%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>

</table>

